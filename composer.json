{
    "name": "prvious/mog",
    "description": "Component library for livewire based application",
    "homepage": "https://mog.prvious.dev",
    "license": "MIT",
    "authors": [
        {
            "name": "Clovis Muneza",
            "email": "clovis@prvious.dev"
        }
    ],
    "keywords": [
        "laravel",
        "livewire",
        "component",
        "ui"
    ],
    "require": {
        "php": "^8.2",
        "illuminate/console": "^11.0|^12.0",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/view": "^11.0|^12.0",
        "livewire/livewire": "^3.5.19",
        "blade-ui-kit/blade-icons": "^1.8",
        "secondnetwork/blade-tabler-icons": "^3.35",
        "gehrisandro/tailwind-merge-php": "^1.1"
    },
    "require-dev": {
        "laravel/pint": "^1.22",
        "pestphp/pest": "^4.1",
        "phpstan/phpstan": "^2.1",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Mog\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mog\\MogServiceProvider"
            ],
            "aliases": {
                "Mog": "Mog\\Mog"
            }
        }
    },
    "scripts": {
        "lint": [
            "@php vendor/bin/pint --ansi"
        ],
        "lint:check": [
            "@php vendor/bin/pint --test"
        ],
        "test": [
            "vendor/bin/pest --ci"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    }
}
